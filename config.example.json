{
  
  "minutes_per_check": 10,     // How often to run a full scan (minutes)
  "seconds_between_check": 60, // Delay between each item (seconds) to be polite
  "tld": "ca",                 // Which Amazon site to use (examples: "ca", "com", "co.uk", "de")
  "url_params": {},            // Extra query parameters to append to all product URLs (usually leave empty)
  "webhook_url": "ENTER_WEBHOOK_HERE",
  "telegram_bot_token": "",           // Telegram bot token from @BotFather (optional)
  "telegram_chat_id": "",             // Your Telegram chat ID (optional) 
  "default_warehouse": true,   // Prefer Amazon Warehouse offers when available (on by default)
  "debug": true,               // Extra logs in the terminal to help diagnose issues
  "server": true,              // Enable the local dashboard (cleaner than using the txt file for changes, not required though)
  "port": 3026,                // Port you want to use for the dashboard (ex. localhost:3025)

  // ============= User Agent rotation (helps avoid blocks) =======================================

  // stable-per-run: one browser identity for the whole session
  // sticky-per-item: each item stays on a consistent identity (recommended)
  // rotate-per-request: new identity every request
  "user_agent_strategy": "sticky-per-item",
  "user_agents": [],           // Optional custom list. Leave empty to use built in ones
  "rotate_on_soft_ban": true,  // When a soft ban is detected, switch user agent for that item

  // ============= Proxy support (optional). Only add proxies if you need them ====================

  "proxies": [],                  // Examples: "http://user:pass@host:port" or "socks5://host:1080"
  "proxy_strategy": "none",       // none | round-robin | sticky-per-item
  "proxy_timeout_ms": 12000,      // Timeout per proxied request (milliseconds)
  "retry_with_next_proxy": true,  // If a proxy fails, try the next one automatically
  "proxy_cooldown_ms": 300000,    // After a failure, pause a proxy for this long (milliseconds)

  // ============= History storage â€” simple settings for everyone ==================================
 
  "history_enabled": true,         // Turn price history on/off for everyone
  "history_days": 7,               // Recent days to keep in full detail
  "history_limit": 50,             // Max saved changes per item
  "history_noise_protection": true // Ignore one-off price spikes unless they repeat

  // Advanced history (optional). Leave commented unless you need it.
  // "history": {
  //   "keep_full_days": 7,
  //   "bucket_after_days": 7,
  //   "bucket_granularity": "1d",
  //   "max_points": 2000,
  //   "keep_flip_markers": true,
  //   "outlier_confirm_scans": 2
  // }
}